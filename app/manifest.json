{
  "name": "__MSG_appName__",
  "version": "0.2.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.amazon.co.jp/*",
        "https://www.amazon.co.jp/*"
      ],
      "js": [
        "scripts/contentscript_amazon.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "http://booklog.jp/*",
        "https://booklog.jp/*"
      ],
      "js": [
        "scripts/contentscript_booklog.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "amakankan"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]
}
